<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageButton
            android:id="@+id/challengeImage"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/challengeTitle"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Github Daily Commit"
                android:textSize="20sp"
                android:background="@color/white" />
            <TextView
                android:id="@+id/challengeExplain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(1일 1커밋을 해보자!)"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/challengeMaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="생성자" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnCertification"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="인증하기"
                    android:background="@drawable/shape_of_rounded_button"/>
                <Button
                    android:id="@+id/btnGallery"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="갤러리"
                    android:background="@drawable/shape_of_rounded_button"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
android:layout_width="match_parent"
android:layout_height="2dp"
android:background="#33333333" />
</LinearLayout>